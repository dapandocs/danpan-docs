{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@vitepress": ["docs/.vitepress/*"],
      "@components": ["docs/components/*"],
    }
  },
  "include": [
    "docs",
    "docs/.vitepress/*.ts"
  ],
  "exclude": ["**/node_modules/**", "**/dist/**"]
}
